var socket = io();

var ITEM_CHOSEN=null
var ITEM_ROTATION = 0;
var ITEM_X=0;
var ITEM_Y=0;
var GENERAL_SIZE=50;
var CURRENT_CANVAS;
var ITEM_MAP = {};
var canvas = document.getElementById("gameArea");
var itemCanvas = document.getElementById("itemShop");
var ctx = canvas.getContext("2d");
var pressedKeys={
	w:false,
	a:false,
	s:false
}

function initializeMapItem()
{
	for(var i =0;i<itemCanvas.height;i+=GENERAL_SIZE)
	{
		var row = {};
		for(var g =0;g<itemCanvas.width;g+=GENERAL_SIZE)
		{
			row[g] = "empty";
		}
		ITEM_MAP[i] = row;
	}
}
function placeItemOnMap(x,y,width,height,item)
{
	var x1 = x;
	var x2 = x+width;
	var y1 = y;
	var y2 = y +height;
	for(var i =x1;i<x2;i+=GENERAL_SIZE)
	{
		for(var g=y1;g<y2;g+=GENERAL_SIZE)
		{
			ITEM_MAP[g][i]=item;
		}
	}
	
}

function initializeThings()
{
	initializeMapItem();
	placeItemOnMap(50,50,200,50,"floor");
}
initializeThings();


socket.on("gameData",function(data){
	ctx.clearRect(0,0,canvas.width,canvas.height);
	
	if(pressedKeys.a)socket.emit("playerMove","L");
	if(pressedKeys.d)socket.emit("playerMove","R");
	if(pressedKeys.w)socket.emit("playerJump");
	
	for(var i =0;i<data.players.length;i++)
	{
		ctx.fillStyle=data.players[i].color;
		ctx.fillRect(data.players[i].x,data.players[i].y,data.players[i].width,data.players[i].height);
	}
	for(var g =0;g<data.traps.length;g++)
	{
		
		for(var z=0;z<data.traps[g].squares.length;z++)
		{
			ctx.fillStyle=data.traps[g].squares[z].color;
			var square = data.traps[g].squares[z];
			ctx.fillRect(square.x,square.y,square.size,square.size);
		}
	}
})

onmousemove = function(event)
{
	ITEM_X = event.layerX- event.layerX%GENERAL_SIZE;
	ITEM_Y = event.layerY- event.layerY%GENERAL_SIZE;
	CURRENT_CANVAS = event.path[0].id;
	console.log(ITEM_X,ITEM_Y)
}

onmousedown = function(event)
{
	if(CURRENT_CANVAS=="itemShop")
	{
		ITEM_CHOSEN = ITEM_MAP[ITEM_X][ITEM_Y];
	}
}

onkeypress = function(event)
{
	if(event.key=="r")
	{
		ITEM_ROTATION+=90;
		if(ITEM_ROTATION==360)ITEM_ROTATION=0;
	}
	if(event.key=="w")
	{
		pressedKeys.w = true;
	}
	if(event.key=="a")
	{
		pressedKeys.a = true;
	}
	if(event.key=="d")
	{
		pressedKeys.d = true;
	}
}
onkeyup = function(event)
{
	if(event.key=="a")
	{
		pressedKeys.a = false;
	}
	if(event.key=="d")
	{
		pressedKeys.d = false;
	}
	if(event.key=="w")
	{
		pressedKeys.w = false;
	}
}