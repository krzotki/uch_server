var socket = io();
var canvas = document.getElementById("gameArea");
var ctx = canvas.getContext("2d");
var pressedKeys={
	w:false,
	a:false,
	s:false
}

ctx.font = "30px Arial";

socket.on("playerData",function(data){
	ctx.clearRect(0,0,canvas.width,canvas.height);
	
	if(pressedKeys.a)socket.emit("playerMove","L");
	if(pressedKeys.d)socket.emit("playerMove","R");
	if(pressedKeys.w)socket.emit("playerJump");
	
	for(var i =0;i<data.length;i++)
	{
		ctx.fillStyle=data[i].color;
		ctx.fillRect(data[i].x,data[i].y,data[i].width,data[i].height);
	}
})
//temp
socket.on("walls",function(data){
	for(var i =0;i<data.length;i++)
	{
		ctx.fillStyle="#00FF00";
		ctx.fillRect(data[i].x,data[i].y,data[i].width,data[i].height);
	}
})
onkeypress = function(event)
{
	if(event.key=="w")
	{
		pressedKeys.w = true;
	}
	if(event.key=="a")
	{
		pressedKeys.a = true;
	}
	if(event.key=="d")
	{
		pressedKeys.d = true;
	}
}
onkeyup = function(event)
{
	if(event.key=="a")
	{
		pressedKeys.a = false;
	}
	if(event.key=="d")
	{
		pressedKeys.d = false;
	}
	if(event.key=="w")
	{
		pressedKeys.w = false;
	}
}