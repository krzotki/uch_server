class Player{
	constructor(id,color)
	{
		this.x = 0;
		this.y =0;
		this.width =50;
		this.height=50;
		this.speedX=0;
		this.speedY=GRAVITY;
		this.id = id;
		this.inAir = true;
		this.canJump = false;
		this.maxSpeedX =20;
		this.color = color;
	}
	update()
	{
		if(this.inAir)this.speedY+=GRAVITY;
		else
		{
			if(this.speedX>0)this.speedX--;
			if(this.speedX<0)this.speedX++;
		}
		if(this.y + this.height>=CANVAS.height)
		{
			this.inAir = false;
			this.y = CANVAS.height - this.height;
			this.canJump = true;
			this.speedY=0;
		}
		this.x += this.speedX;
		this.y += this.speedY;
	}
	jump()
	{
		if(this.canJump)
		{
			this.inAir = true;
			this.y--;
			this.speedY-=20;
			this.canJump=false;
		}
	}
	move(direction)
	{
		if(direction=="L" && this.speedX>-this.maxSpeedX)this.speedX-=2;
		if(direction=="R" && this.speedX<this.maxSpeedX)this.speedX+=2;
	}
}
